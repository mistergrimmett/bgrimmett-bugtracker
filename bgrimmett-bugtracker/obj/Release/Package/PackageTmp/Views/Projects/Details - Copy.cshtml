@model bgrimmett_bugtracker.Models.CodeFirst.Project

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_InternalLayout.cshtml";
}

<div class="container text-center">
    <h2>Details</h2>

    <div>
        <h4>Project</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Project Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                Creator
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AuthorId)
            </dd>

            <dt>
                Body
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Body)
            </dd>

            <dt>
                Assigned To
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AssignedToUser.FirstName)
            </dd>

            <dt>
                Status
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsActive)
            </dd>

            <dt>
                Created
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateCreated)
            </dd>

            <dt>
                Updated
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateUpdated)
            </dd>

        </dl>
    </div>

    <div>
    @foreach (var user in Model.Users)
    {
        <div>
            @user.DisplayName
        </div>
    }
    </div>
    <p>
        <a href="@Url.Action("ProjectUser", "Projects", new { id = Model.Id }, null)" class="btn btn-primary">Assign Users</a> | @*overloads need to be either 3 or 5*@
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">Edit</a> |
        <a href="@Url.Action("Index")" class="btn btn-primary">Back to List</a>
    </p>
</div>